{
  "name": "node-hub",
  "version": "1.0.4",
  "description": "Management hub",
  "main": "app.js",
  "bin": "./bin/node-hub",
  "dependencies": {
    "bleacon": "*",
    "config": "*",
    "noble": "*",
    "pm2": "~1.1.0",
    "redis": "latest",
    "serial-number": "^1.2.0",
    "string": "*",
    "winston": "*",
    "wireless": "*",
    "ws": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "cucumber": "^1.0.0",
    "eslint": "^2.8.0",
    "eslint-teamcity": "^1.1.0",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "mocha-teamcity-reporter": ">=0.0.1",
    "proxyquire": "^1.7.9",
    "semver": "^5.1.0",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0"
  },
  "scripts": {
    "lint": "eslint lib/**/*.js test/**/*.js",
    "test": "istanbul cover ./node_modules/.bin/_mocha -- --require test/support/bootstrap.js --recursive -R spec test/unit/**/*.js",
    "test-integration": "mocha --require test/support/bootstrap.js -R spec test/integration/*.js",
    "test:teamcity": "istanbul cover ./node_modules/.bin/_mocha -- --require test/support/bootstrap.js --recursive -R mocha-teamcity-reporter test/unit/**/*.js",
    "test-acceptance": "cucumberjs",
    "start": "pm2 start --no-daemon processes.json"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:bluesensenetworks/node-hub.git"
